@model IEnumerable<WebApplication1.Models.SACH>

@{
    ViewBag.Title = "SPtheochude";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h1 style="text-align:center;color: floralwhite"> Sản Phẩm Theo Chủ Đề </h1>


    @foreach (var sach in Model)
    {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <a href="@Url.Action("Details","BookStore",new { id = sach.Masach})">
                    <img alt="@sach.Tensach" src="~/img/@sach.Hinhminhhoa" width="180" />
                    <div>
                        <br />
                        <h4 style="text-align:center">
                            @sach.Tensach
                        </h4>
                    </div>
                    <div class="ratings">
                        <p class="pull-right"> 15 reviews</p>
                        <p>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                        </p>
                    </div>
                </a>
            </div>
        </div>
    }

