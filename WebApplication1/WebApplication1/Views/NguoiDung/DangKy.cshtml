
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<h4 style="color:cadetblue; text-align:center">@ViewBag.Thongbao</h4>
<table align="center">
    <h1 style="text-align:center"> Đăng Kí Thành Viên</h1>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px;color:white">
            <td>Họ tên khách hàng : </td>
            <td>
                @Html.TextBox("HotenKH")
                @ViewData["Loi 1"]
            </td>
        </tr>

        <tr style="height:40px;color:white">
            <td>Tên đăng nhập : </td>
            <td>
                @Html.TextBox("TenDN")
                @ViewData["Loi 2"]
            </td>
        </tr>

        <tr style="height:40px;color:white">
            <td>Mật khẩu : </td>
            <td>
                @Html.Password("Matkhau")
                @ViewData["Loi 3"]
            </td>
        </tr>

        <tr style="height:40px;color:white">
            <td>Nhập lại mật khẩu : </td>
            <td>
                @Html.Password("Matkhaunhaplai")
                @ViewData["Loi 4"]
            </td>
        </tr>

        <tr style="height:40px;color:white">
            <td>Nhập email : </td>
            <td>
                @Html.TextBox("Email")
                @ViewData["Loi 5"]
            </td>
        </tr> 

        <tr style="height:40px;color:white">
            <td>Số điện thoại : </td>
            <td>
                @Html.TextBox("Dienthoai")
                @ViewData["Loi 6"]
            </td>
        </tr>

        <tr style="height:40px;color:white">
            <td>Ngày sinh : </td>
            <td>
                <input type="date" name="Ngaysinh" />
            </td>
        </tr>

        <tr style="height:40px;color:white">
            <td> </td>
            <td>
                <input type="submit" value="Đăng ký" />
            </td>
        </tr>
    }
</table>


